{
  "name": "preggies-api",
  "version": "1.0.0",
  "description": "Preggies back end service.",
  "main": "app.js",
  "scripts": {
    "start": "nodemon src/server.js",
    "test": "jest",
    "lint": "eslint src --fix",
    "pretest": "npm run lint"
  },
  "author": "Oyemade",
  "license": "ISC",
  "jest": {
    "testURL": "http://localhost/",
    "roots": [
      "./src/"
    ],
    "testMatch": [
      "**/?(*.)test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js}"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.8.7",
    "morgan": "^1.9.1",
    "xss-clean": "^0.1.1",
    "express-mongo-sanitize": "^1.3.2",
    "cors": "^2.8.5",
    "helmet": "^3.16.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "25.2.7",
    "nodemon": "2.0.2",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0"
  },
  "engines": {
    "node": "^10"
  }
}
