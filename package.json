{
  "name": "preggies-api",
  "version": "0.0.1",
  "description": "Preggies back end service.",
  "main": "app.js",
  "scripts": {
    "start": "node lib/index.js",
    "dev": "nodemon --delay 20ms --exec NODE_ENV=development ts-node -- src/index.ts",
    "test": "jest",
    "lint": "eslint 'src/**/**/*.ts'",
    "clean:build": "rm -rf lib/*",
    "build": "yarn clean:build && tsc",
    "pretest": "yarn lint"
  },
  "author": {
    "name": "Preggies Dev Team",
    "email": "team@preggies.co",
    "url": "https://preggies.co/about"
  },
  "license": "ISC",
  "dependencies": {
    "convict": "5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express-mongo-sanitize": "^1.3.2",
    "helmet": "^3.16.0",
    "mongoose": "^5.8.7",
    "morgan": "^1.9.1",
    "nanoexpress-pro": "1.11.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/convict": "4.2.1",
    "@types/jest": "25.2.1",
    "@types/mongoose": "5.7.9",
    "@types/node": "13.11.0",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "4.2.5",
    "jest": "25.2.7",
    "jest-junit": "10.0.0",
    "lint-staged": "10.1.3",
    "nodemon": "2.0.2",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0",
    "ts-jest": "25.3.1",
    "ts-node": "8.8.2",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": "^12.16.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run test"
    }
  },
  "lint-staged": {
    "**/*.{js, tsx, ts}": [
      "eslint --fix",
      "yarn test"
    ]
  }
}
